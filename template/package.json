{
  "name": "HelloWorld",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "preinstall": "node tools/forceYarn.js",
    "postinstall": "node tools/postinstallFixes.js",
    "ts": "tsc -p .",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "start-reset-cache": "node node_modules/react-native/local-cli/cli.js start -- --reset-cache",
    "android:run": "node node_modules/react-native/local-cli/cli.js run-android --no-packager",
    "android:run+start": "node node_modules/react-native/local-cli/cli.js run-android --no-packager && node node_modules/react-native/local-cli/cli.js start",
    "android:build-release-apk": "(cd android/ && gradlew assembleRelease)",
    "android:clean": "(cd android/ && gradlew clean)",
    "android:bundle": "node node_modules/react-native/local-cli/cli.js bundle --platform android --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --sourcemap-output android/app/src/main/assets/index.android.map --assets-dest android/app/src/main/res/ --dev false --sourcemap-sources-root=build",
    "ios:run": "node node_modules/react-native/local-cli/cli.js run-ios --no-packager",
    "check-dependencies-updates": "yarn outdated",
    "check-pods-updates": "cd ios && pod outdated",
    "tests": "jest",
    "tests:watch": "jest --watchAll",
    "eslint:run": "eslint --ext=jsx,ts,tsx",
    "eslint:fix": "eslint --fix --ext=jsx,ts,tsx ."
  },
  "dependencies": {
    "@react-native-community/async-storage": "1.12.0",
    "@react-native-community/masked-view": "0.1.10",
    "@react-navigation/bottom-tabs": "5.8.0",
    "@react-navigation/drawer": "5.9.0",
    "@react-navigation/native": "5.7.3",
    "@react-navigation/stack": "5.9.0",
    "@reduxjs/toolkit": "1.4.0",
    "faker": "4.1.0",
    "intl": "1.2.5",
    "lodash": "4.17.20",
    "moment": "2.27.0",
    "react": "16.13.1",
    "react-native": "0.63.2",
    "react-native-device-detection": "0.2.1",
    "react-native-gesture-handler": "1.7.0",
    "react-native-localization": "2.1.6",
    "react-native-orientation-locker": "1.2.0",
    "react-native-reanimated": "2.0.0-alpha.5",
    "react-native-safe-area-context": "3.1.6",
    "react-native-screens": "2.10.1",
    "react-native-swiper": "1.6.0",
    "redux-persist": "6.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.11.1",
    "@babel/runtime": "7.11.2",
    "@react-native-community/eslint-config": "2.0.0",
    "@storybook/addon-actions": "6.0.13",
    "@storybook/addon-knobs": "6.0.13",
    "@storybook/addon-ondevice-actions": "5.3.19",
    "@storybook/addon-ondevice-knobs": "5.3.19",
    "@storybook/react-native": "5.3.19",
    "@types/faker": "4.1.12",
    "@types/intl": "1.2.0",
    "@types/jest": "26.0.10",
    "@types/lodash": "4.14.159",
    "@types/react": "16.9.46",
    "@types/react-native": "0.63.8",
    "@types/react-test-renderer": "16.9.3",
    "babel-jest": "26.3.0",
    "eslint": "7.7.0",
    "husky": "4.2.5",
    "jest": "26.4.0",
    "metro-react-native-babel-preset": "0.62.0",
    "react-test-renderer": "16.13.1",
    "ts-jest": "26.2.0",
    "typescript": "3.9.7"
  },
  "jest": {
    "preset": "react-native",
    "testPathIgnorePatterns": [
      "node_modules"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
      "\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.jest.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run ts && yarn run eslint:run",
      "pre-push": "yarn run ts && yarn run eslint:run",
      "post-merge": "yarn run ts && yarn run eslint:run"
    }
  }
}
